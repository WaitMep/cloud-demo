
.container {
  width: 100vw;
  height: 100vh;
}

.header {
  width: 100%;
  height: 500rpx;
  position: relative;
}

.background {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.avatar {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -60rpx;
  margin-top: -60rpx;
  z-index: 9;
  background: #f7f7f7;
  border-radius: 50%;
  width: 120rpx;
  height: 120rpx;
}

.main nav-cmp:nth-child(1) > view {
  border: none;
}

.click {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
  height: 120rpx;
  background: #f7f7f7;
  line-height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  font-size: 24rpx;
  color: #ccc;
}
