/* miniprogram/pages/collection/index.wxss */
.fixBox {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
  
  background: #fff;
  width: 750rpx;
  height: 100rpx;

  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20rpx;
  border: 1rpx solid #f7f7f7;
}

.searchBar {
  display: flex;
  align-items: center;
  width: 690rpx;
  height: 68rpx;
  border-radius: 30rpx;
  background: #f7f7f7;
  font-size: 28rpx;
  color: #999;
}

.searchBar > image {
  margin-left: 260rpx;
  width: 28rpx;
  height: 28rpx;
}

.search text {
  padding-left: 10rpx;
}

/* container */
.container {
  background: #f7f7f7;
  padding-top: 140rpx;
}
.tag {
  width: 750rpx;
  margin-top: 20rpx;
  padding-top: 20rpx;
  font-size: 28rpx;
  text-align: center;
  color: #b4430a;
  background: #fff;
}
.booksWrap {
  display: flex;
  flex-wrap: wrap;
  padding: 0 25rpx 20rpx 25rpx;
  width: 700rpx;
  justify-content: space-around;
  background: #fff;
}

.book {
  margin-top: 40rpx;
}