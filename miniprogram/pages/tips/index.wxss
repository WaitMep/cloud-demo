.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #7dc5eb;
  height: 100vh;
}
image {
  width: 150rpx;
  height: 150rpx;
  padding: 50rpx;
}
.weather {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  padding: 80rpx 0;
}

.weather > view {
  padding: 20rpx;
  box-sizing: border-box;
  width: 50%;
  font-size: 28rpx;
  color: #666;
}

.title {
  font-size: 32px;
  color: #f5f5f5;
  /* margin-top: 50rpx; */
}

.desc {
  text-indent: 1.5em;
  padding: 12rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 32rpx;
}
